                                    Foreground="{TemplateBinding Foreground}" />
                            </Viewbox>

                            <TextBlock
                                x:Name="TextLabel"
                                Grid.Row="1"
                                Margin="{ThemeResource AppBarButtonTextLabelMargin}"
